<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Фон: светло-серый с лёгкой прозрачностью для Material-стиля -->
    <solid android:color="#F0FFFFFF" />  <!-- Белый с 94% opacity -->

    <!-- Закруглённые углы: 28dp — как в современных Material SearchBar -->
    <corners android:radius="28dp" />

    <!-- Обводка: тонкая, в цвет акцента (teal_200) -->
    <stroke
        android:width="2dp"
        android:color="@color/teal_200" />

    <!-- Внутренний отступ для иконки и текста -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" />

</shape>